<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.issuetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IssueTracker">
        <activity android:name=".ModifyTicketActivity"></activity>
        <activity android:name=".DeleteTicketActivity" />
        <activity android:name=".AddTicketActivity" />
        <activity
            android:name=".IssueTrackingActivity"
            android:label="@string/title_activity_issue_tracking"
            android:theme="@style/Theme.IssueTracker.NoActionBar" />
        <activity
            android:name=".MainActivity2"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.IssueTracker.NoActionBar" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>